FROM python:3.9-slim

WORKDIR /app

# Copy requirements and install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy the Startup-Chatbot directory
COPY ../Startup-Chatbot /app/Startup-Chatbot

# Copy the server file
COPY startup_chatbot_server.py .

# Set environment variables
ENV PYTHONPATH=/app:/app/Startup-Chatbot

# Expose port
EXPOSE 8080

# Run the server
CMD ["gunicorn", "--bind", "0.0.0.0:8080", "--workers", "1", "--timeout", "300", "startup_chatbot_server:app"]
