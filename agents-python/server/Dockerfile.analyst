FROM python:3.9-slim

WORKDIR /app

# Copy requirements and install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy the Startup-Analyst directory
COPY ../Startup-Analyst /app/Startup-Analyst

# Copy the server file
COPY startup_analyst_server.py .

# Set environment variables
ENV PYTHONPATH=/app:/app/Startup-Analyst

# Expose port
EXPOSE 8080

# Run the server
CMD ["gunicorn", "--bind", "0.0.0.0:8080", "--workers", "1", "--timeout", "300", "startup_analyst_server:app"]
